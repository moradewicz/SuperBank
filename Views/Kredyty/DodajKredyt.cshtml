@model BankApp_V2_MVC.Models.DodajKredytMultipleVievs
@{
    ViewBag.Title = "Dodaj kredyt";
}

<h2>Dodaj kredyt</h2>


<div class="container">
    <div class="row clearfix">
        <div class="col-md-2 ">
            <div class="btn-group btn-group-vertical ">
                @Html.ActionLink("Kredyty", "Index", "Kredyty", null, new { @class = "btn btn-default" })
                @Html.ActionLink("Dodaj nowy kredyt ", "DodajKredyt", "Kredyty", null, new { @class = "btn btn-default" })
            </div>
        </div>
        <div class="col-md-10">

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)

                <div class="form-group">

              

                    @Html.LabelFor(m => Model.DodajKredyt.Rachunek, new { @class = "col-md-2 control-label" })



                    @Html.DropDownList("DodajLokate.NumerKonta", ViewBag.DaneKontList as SelectList, "-- Wybierz konto --", new { @class = "btn btn-default dropdown-toggle" })

                    <br />

                </div>




                <div class="form-group">

                    @Html.LabelFor(m => Model.DodajKredyt.Okres, new { @class = "col-md-2 control-label" })



                    @Html.DropDownList("DodajLokate.Okres", ViewBag.Okres as SelectList, "-- Wybierz okres trwania kredytu  --", new { @class = "btn btn-default dropdown-toggle" })

                    <br />

                </div>


                <div>
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-inline">
                        @Html.LabelFor(m => Model.DodajKredyt.Kwota, new { @class = "col-md-2 control-label" })
                        <div>
                            @Html.TextBoxFor(m => Model.DodajKredyt.Kwota, new { @class = "form-control" })
                            PLN
                        </div>
                    </div>
                </div>


                <div>
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => Model.DodajKredyt.Oprocentowanie, new { @class = "col-md-2 control-label" })
                        <div>
                            <p> 1 miesiąc - 5%,  6 miesięcy - 5%, 12 miesięcy - 7%</p>
                        </div>
                    </div>
                </div>
                <input class="btn btn-default" type="submit" value="OK" />
            }
        </div>
        <div class="col-md-4 ">
        </div>
    </div>
</div>